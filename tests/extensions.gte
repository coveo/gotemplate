@merge($, $.common)

@define("draw_fir")
  $colors := printf("Fg%s,Bg%s", .fg, .bg)
  $len := .size * 2 * lenc(.char) + len(color($colors))
  @r := to(1, .size*2, 2)
  @if (.reverse) @r := .r[-1:0];
  @for ($n := .r)
    @center($len, color($colors, $.char * $n))
  @end range
@end define

